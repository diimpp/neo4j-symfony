<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service class="Neo4j\Neo4jBundle\SymfonyClient" id="neo4j.client">
            <factory service="neo4j.client_factory" method="create" />
        </service>
        <service class="Neo4j\Neo4jBundle\EventHandler" id="neo4j.event_handler" public="false" autowire="true" />
        <service class="Neo4j\Neo4jBundle\ClientFactory" id="neo4j.client_factory" public="false">
            <argument type="service" id="neo4j.event_handler" />
            <argument type="service" id="neo4j.default_driver_config" />
            <argument type="service" id="neo4j.default_session_config" />
            <argument type="service" id="neo4j.default_transaction_config" />
        </service>
        <service class="Laudis\Neo4j\Basic\Driver" id="neo4j.driver" public="true">
            <factory service="neo4j.client" method="getDriver" />
        </service>
        <service id="Laudis\Neo4j\Contracts\ClientInterface" alias="neo4j.client">
        </service>
    </services>
</container>
